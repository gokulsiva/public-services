<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#e9c4bb"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/detailed_hospital_name"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#e9c4bb"
        android:textSize="30sp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Doctor"
        android:id="@+id/detailed_hospital_doctor"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#e9c4bb"
        android:textSize="25sp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address"
        android:id="@+id/detailed_hospital_address"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#e9c4bb"
        android:textSize="20sp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Specality"
        android:id="@+id/detailed_hospital_specality"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#e9c4bb"
        android:textSize="20sp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Timing"
        android:id="@+id/detailed_hospital_functioning"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#e9c4bb"
        android:textSize="20sp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to view in Map"
        android:background="#06d9f0"
        android:id="@+id/button"
        android:textColor="@android:color/black"/>

</LinearLayout>
</ScrollView>